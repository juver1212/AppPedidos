<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:background="?android:attr/windowBackground"
    >

    <TextView android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T014-00000005"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <!--<TextView android:id="@+id/txtCliente"
            android:layout_width="wrap_content"
            android:text="Agroindustrias SRL"
            android:gravity="left"
            android:layout_height="49dp" />-->

    <TextView android:id="@+id/txtDestino"
        android:layout_width="15px"
        android:gravity="left"
        android:visibility="invisible"
        android:layout_height="5px" />


    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:scaleType="fitEnd"
        android:src="@mipmap/ic_ruta" />

    <ImageView
        android:id="@+id/imgIcon_mensaje"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_iconfinder_chat_1296362" />

</LinearLayout>